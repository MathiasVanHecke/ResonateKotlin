<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SwipeProfilePage">

    <ImageView
            android:layout_width="379dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/tvProfilePage_name"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvProfilePage_name"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textColor="@color/ResonateWhite" android:textSize="18sp"
            android:textAlignment="center" android:paddingBottom="5dp" android:paddingLeft="10dp"
            android:paddingRight="10dp" android:paddingTop="5dp" android:background="@color/ResonateGrey"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvProfilePage_beschrijving"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textColor="@color/ResonateWhite" android:textSize="14sp"
            android:textAlignment="center" android:paddingBottom="5dp" android:paddingLeft="10dp"
            android:paddingRight="10dp" android:paddingTop="5dp" android:background="@color/ResonateGrey"
            app:layout_constraintHorizontal_bias="0.501" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/gvSwipePage_artists"/>
    <GridView
            android:layout_width="wrap_content"
            android:layout_height="155dp"
            android:id="@+id/gvSwipePage_artists" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvProfilePage_name" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:numColumns="3"/>
</android.support.constraint.ConstraintLayout>