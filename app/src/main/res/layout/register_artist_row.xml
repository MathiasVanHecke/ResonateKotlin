<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="60dp"
            android:layout_height="55dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/ivArtistRow"
            app:layout_constraintStart_toStartOf="parent"
            android:cropToPadding="false"
            android:adjustViewBounds="false" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"/>
    <TextView
            android:text="Artist"
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:id="@+id/tvArtistRow_artist"
            android:background="@color/ResonateGrey"
            android:textColor="@color/ResonateWhite" android:textSize="18sp" android:textAlignment="center"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="@+id/ivArtistRow"
            app:layout_constraintStart_toEndOf="@+id/ivArtistRow" android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>